<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_dialog_product_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="50dp"
        android:hint="Cola"
        android:textAlignment="center"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_dialog_product_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="20dp"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/edit_dialog_product_name" />

    <EditText
        android:id="@+id/edit_dialog_product_quantity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="20dp"
        android:hint="Quantity"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/edit_dialog_product_price" />

</androidx.constraintlayout.widget.ConstraintLayout>